/**
 * Render a entity remotely
 */
function _webcomponents_cmstags_entity_render() {
  backdrop_add_http_header('Content-Type', 'application/json');
  // define status
  backdrop_add_http_header('Status', 200);
  // get text from the request body
  $return = array(
    'status' => 403,
    'content' => '',
  );
  $params = filter_var_array($_GET, FILTER_SANITIZE_STRING);
  $type = $params['type'];
  $id = $params['id'];
  $display_mode = $params['display_mode'];
  $entity = entity_load_single($type, $id);
  // render array the entity based on viewing it
  $render_array = entity_view($type, array($entity), $display_mode);
  // replace the content
  $content = backdrop_render($render_array);
  $return = array(
    'status' => 200,
    'content' => $content,
    'type' => $type,
    'id' => $id,
    'display_mode' => $display_mode,
  );
  // output the response as json
  print backdrop_json_output($return);
  exit;
}

/**
 * Render a block remotely
 */
function _webcomponents_cmstags_block_render() {
  backdrop_add_http_header('Content-Type', 'application/json');
  // define status
  backdrop_add_http_header('Status', 200);
  // get text from the request body
  $return = array(
    'status' => 403,
    'content' => '',
  );
  $params = filter_var_array($_GET, FILTER_SANITIZE_STRING);
  $module = $params['module'];
  $delta = $params['delta'];
  $block = module_invoke($module, 'block_view', $delta);
  $content = render($block['content']);
  $return = array(
    'status' => 200,
    'content' => $content,
    'module' => $module,
    'delta' => $delta,
  );
  // output the response as json
  print backdrop_json_output($return);
  exit;
}

